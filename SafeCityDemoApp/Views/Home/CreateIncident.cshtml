@model Incident
@{
    ViewBag.Title = "CreateIncident";
}

<h2>CreateIncident</h2>


@using (Html.BeginForm("CreateIncident", "", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(x => x.Number, new { @class = "control-label" })
        @Html.TextBoxFor(x => x.Number, new { @class = "form-control", placeholder = "E.g, N0909" })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.CallerName, new { @class = "control-label" })
        @Html.TextBoxFor(x => x.CallerName, new { @class = "form-control" })
    </div>


    <div class="form-group">
        @Html.LabelFor(x => x.CallerNumber, new { @class = "control-label" })
        @Html.TextBoxFor(x => x.CallerNumber, new { @class = "form-control" })
    </div>


    <div class="form-group">
        @Html.LabelFor(x => x.Date, new { @class = "control-label" })
        @Html.TextBoxFor(x => x.Date, new { @class = "form-control", })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.CategoryId, new { @class = "control-label" })
        @Html.TextBoxFor(x => x.CategoryId, new { @class = "form-control" })
    </div>


    <div class="form-group">
        @Html.LabelFor(x => x.LocationId, new { @class = "control-label" })
        @Html.TextBoxFor(x => x.LocationId, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-default">Submit</button>
}